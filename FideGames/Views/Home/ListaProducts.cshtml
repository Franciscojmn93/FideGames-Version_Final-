@model IEnumerable<FideGames.Models.product>

@{
    ViewBag.Title = "ListaProducts";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@if (ViewBag.exito == "" | ViewBag.exito == null)
{

}
else
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert">x</button>
        <span class="aria-hidden">@Html.ViewBag.exito</span>
    </div>

}
@if (ViewBag.error == "" | ViewBag.error == null)
{

}
else
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert">x</button>
        <span class="aria-hidden">@ViewBag.error</span>
    </div>

}

<div class="card-body card shadow mb-4">
    <style>
        .table-title {
            padding-bottom: 15px;
            background: #040FD9;
            color: #fff;
            padding: 16px 30px;
            min-width: 100%;
            margin: -20px -25px 10px;
            border-radius: 3px 3px 0 0;
        }

            .table-title h2 {
                margin: 5px 0 0;
                font-size: 24px;
            }

            .table-title .btn-group {
                float: right;
            }

            .table-title .btn {
                color: #fff;
                float: right;
                font-size: 13px;
                border: none;
                min-width: 50px;
                border-radius: 2px;
                border: none;
                outline: none !important;
                margin-left: 10px;
            }
    </style>
    <div class="table-title">
        <div class="row">
            <div class="col-sm-6">
                <h2>Lista de Productos</h2>
            </div>
        </div>

    </div>
    <div class="table-responsive">
        <table id="TableEmployee" class="table table-avance table-striped ">
            <thead class="table-dark">
                <tr>
                    <th class="">
                        Nombre de Producto
                    </th>
                    <th class="">
                        Tipo de Producto
                    </th>
                    <th class="">
                        Departamento del Producto
                    </th>
                    <th class="">
                        Marca del Producto
                    </th>
                    <th class="">
                        Descripcion del Producto
                    </th>
                    <th class="">
                        cantidad disponible del Producto
                    </th>
                    <th class="">
                        Precio del Producto
                    </th>
                </tr>
            </thead>
            <tbody class=" ">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.product_name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.type_product.type_product_name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.deparment_product.deparment_product_name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.brand_product.brand_product_name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.product_description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.quantities)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.price)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="d-flex justify-content-center ">
        @Html.ActionLink("Volver", "Index", new { @class = "btn btn-default mr-2" })
    </div>

</div>


