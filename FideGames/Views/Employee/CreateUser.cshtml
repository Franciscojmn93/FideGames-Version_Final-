@model FideGames.Models.Users

@{
    ViewBag.Title = "CreateUser";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@if (ViewBag.error == "" | ViewBag.error == null)
{

}
else
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert">x</button>
        <span class="aria-hidden">@ViewBag.error</span>
    </div>

}
<div class="card-body card shadow mb-4">
    <style>
        .card-title {
            padding-bottom: 15px;
            background: #040FD9;
            color: #fff;
            padding: 16px 30px;
            min-width: 100%;
            margin: -20px -25px 10px;
            border-radius: 3px 3px 0 0;
        }
    </style>
    <div class="card-title">
        <div class="row">
            <div class="col-sm-6">
                <h2>Creacion de Usuario</h2>
            </div>
        </div>
    </div>
    @using (Html.BeginForm("CreateUser", "Employee", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="text-dark">Nombre de Usuario</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.userName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.userName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="text-dark">Contraseña</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="text-dark">Usuario Activo</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.user_active, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.user_active, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="text-dark">Seleccione una imagen de Usuario</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.userImage, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.userImage, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="text-dark">Seleccione el Nombre de Empleado</label>
                <div class="col-md-10">
                    @Html.DropDownList("employeeId", null, htmlAttributes: new { @class = "custom-select my-1 mr-sm-2" })
                    @Html.ValidationMessageFor(model => model.employeeId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="text-dark">Selccione un Rol</label>
                <div class="col-md-10">
                    @Html.DropDownList("rol", null, htmlAttributes: new { @class = "custom-select my-1 mr-sm-2" })
                    @Html.ValidationMessageFor(model => model.rol, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Crear Usuario" class="btn btn-primary" />
                </div>
            </div>
            <div class="form-group">
                <div>
                    @Html.ActionLink("Mostrar Lista de Usuarios", "ListaUsers")
                </div>
            </div>
        </div>
    }

</div>

