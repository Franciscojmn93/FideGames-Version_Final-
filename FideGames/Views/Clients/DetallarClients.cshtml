@model FideGames.Models.clients

@{
    ViewBag.Title = "DetallarClients";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@if (ViewBag.Mensaje == "" | ViewBag.Mensaje == null)
{
}
else
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert">x</button>
        <strong>Exitoso!</strong>
        <span class="aria-hidden">@Html.ViewBag.Mensaje</span>
    </div>

}
<div class="card-body card shadow mb-4">
    <style>
        .card-title {
            padding-bottom: 15px;
            background: #040FD9;
            color: #fff;
            padding: 16px 30px;
            min-width: 100%;
            margin: -20px -25px 10px;
            border-radius: 3px 3px 0 0;
        }
    </style>
    <div class="card-title">
        <div class="row">
            <div class="col-sm-6">
                <h2>Detalles del Cliente @Html.DisplayFor(model => model.client_name1) </h2>
            </div>
        </div>
    </div>

    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="form-group">
            <div class="col-md-10">
                <label class="text-dark">Primer Nombre</label>
                <input disabled class="form-control" id="colFormLabel" placeholder="@Html.DisplayFor(model => model.client_name1)">
            </div>
            <div class="col-md-10">
                <label class="text-dark">Segundo Nombre</label>
                <input disabled class="form-control" id="colFormLabel" placeholder="@Html.DisplayFor(model => model.client_name2)">
            </div>
            <div class="col-md-10">
                <label class="text-dark">Primer Apellido</label>
                <input disabled class="form-control" id="colFormLabel" placeholder="@Html.DisplayFor(model => model.client_lastname1)">
            </div>
            <div class="col-md-10">
                <label class="text-dark">Segundo Apellido</label>
                <input disabled class="form-control" id="colFormLabel" placeholder="@Html.DisplayFor(model => model.client_lastname2)">
            </div>
            <div class="col-md-10">
                <label class="text-dark">Identificacion del Cliente</label>
                <input disabled class="form-control" id="colFormLabel" placeholder="@Html.DisplayFor(model => model.client_id_card)">
            </div>
            <div class="col-md-10">
                <label class="text-dark">Correo del Cliente</label>
                <input disabled class="form-control" id="colFormLabel" placeholder="@Html.DisplayFor(model => model.client_email)">
            </div>
            <div class="col-md-10">
                <label class="text-dark">Direccion del Cliente</label>
                <input disabled class="form-control" id="colFormLabel" placeholder="@Html.DisplayFor(model => model.client_direcction)">
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.ActionLink("Editar", "EditarClients", new { id = Model.client_id }, new { @class = "btn btn-warning" })
                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
                    Eliminar
                </button>
            </div>
            <div class="col-md-10 mt-3">
                @Html.ActionLink("Mostrar lista de Clientes registrados", "ListaClients")
            </div>
        </div>

    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    <i class="fas fa-exclamation-triangle" style="color:red;"></i>
                    Advertencia
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Esta Seguro que desea Eliminar el Cliente @Html.DisplayFor(model => model.client_name1) ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>

                @using (Html.BeginForm("EliminarClients", "Clients", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.client_id)
                    @Html.HiddenFor(model => model.client_name1)
                    @Html.HiddenFor(model => model.client_name2)
                    @Html.HiddenFor(model => model.client_lastname1)
                    @Html.HiddenFor(model => model.client_lastname2)
                    @Html.HiddenFor(model => model.client_id_card)
                    @Html.HiddenFor(model => model.client_email)
                    @Html.HiddenFor(model => model.client_direcction)

                    <div class="form-actions no-color">
                        <input type="submit" value="Eliminar" class="btn btn-danger" />
                    </div>
                }

            </div>
        </div>
    </div>
</div>

