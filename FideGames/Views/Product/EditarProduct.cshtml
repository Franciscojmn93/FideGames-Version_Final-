@model FideGames.Models.product

@{
    ViewBag.Title = "EditarProduct";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@if (ViewBag.error == "" | ViewBag.error == null)
{

}
else
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert">x</button>
        <span class="aria-hidden">@ViewBag.error</span>
    </div>

}
<div class="card-body card shadow mb-4">
    <style>
        .card-title {
            padding-bottom: 15px;
            background: #040FD9;
            color: #fff;
            padding: 16px 30px;
            min-width: 100%;
            margin: -20px -25px 10px;
            border-radius: 3px 3px 0 0;
        }
    </style>
    <div class="card-title">
        <div class="row">
            <div class="col-sm-6">
                <h2>Editar Datos de Producto</h2>
            </div>
        </div>
    </div>
    @using (Html.BeginForm("EditarProduct", "Product", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.product_id)

            <div class="form-group">
                <label class="text-dark">Nombre de Producto</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.product_name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.product_name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="text-dark">Categotia de Producto</label>
                <div class="col-md-10">
                    @Html.DropDownList("type_product_id", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.type_product_id, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="text-dark">Departamento de Producto</label>
                <div class="col-md-10">
                    @Html.DropDownList("deparment_id", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.deparment_id, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="text-dark">Departamento de Producto</label>
                <div class="col-md-10">
                    @Html.DropDownList("brand_id", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.brand_id, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="text-dark">Descripcion de Producto</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.product_description, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.product_description, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="text-dark">Cantidad disponible de Producto</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.quantities, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.quantities, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="text-dark">Precio de Producto</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.price, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.price, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.ActionLink("Mostrar Lista de Productos", "ListaProducts")
                </div>
            </div>

        </div>

    }
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

